<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ease.nogame.domain">
    <class name="Account" table="account">
       	<id name="id" column="id">
    		 <generator class="increment" />
    	</id>
  
        <property name="userName" column="user_name" />
        <property name="password" column="password" />
        <property name="createTime" column="create_time" />
        <property name="accessTime" column="access_time" />
     </class> 
     
      <sql-query name="queryAccountByName">  
        <return-scalar column="userName" type="string"/>  
        <return-scalar column="password" type="string"/>
        <return-scalar column="createTime" type="date"/>
        <return-scalar column="accessTime" type="date"/>
              
        <![CDATA[select user_name as userName, password, create_time as createTime, access_time as accessTime from account where user_name=:userName]]>  
      </sql-query>
      
            
</hibernate-mapping>
